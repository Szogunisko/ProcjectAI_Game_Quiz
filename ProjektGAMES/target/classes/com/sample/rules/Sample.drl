package com.sample.rules
import java.util.List;
import org.kie.api.runtime.KieRuntime
import javax.swing.JOptionPane;
import javax.swing.JFrame
global JFrame frame
global javax.swing.JTextArea textArea
import com.sample.DroolsTest.Message;
 	
declare GUIState
    trescPytania: String;            // treœæ pytania
    opcje_odpowiedzi: List 			// opcje odpowiedzi
    opcjaDomyslna: String;           // opcja domyœlna
    typ: TypWyboru;               // CheckBox lub RadioButton
    odpowiedz: String;               // odpowiedŸ u¿ytkownika
end
 
declare enum TypWyboru
  CHECK("Chekbox"),RADIO("Radiobutton");
  fullName : String;
end

rule "Hello World"
    when
        m : Message( status == Message.HELLO, myMessage : message )
    then
        System.out.println( myMessage );
        m.setMessage( "Goodbye cruel world" );
        m.setStatus( Message.GOODBYE );
        update( m );
end

rule "GoodBye"
    when
        Message( status == Message.GOODBYE, myMessage : message )
    then
        System.out.println( myMessage );
end
